datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/__generated__/client"
}

model Post {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)
  userId    String
  imageUrl  String
}
